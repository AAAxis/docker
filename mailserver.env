# Domain and hostname
OVERRIDE_HOSTNAME=mail.theholylabs.com
DOMAINNAME=theholylabs.com

# SSL Configuration
SSL_TYPE=manual
SSL_CERT_PATH=/etc/letsencrypt/live/mail.theholylabs.com/cert.pem
SSL_KEY_PATH=/etc/letsencrypt/live/mail.theholylabs.com/privkey.pem

# Enable services
ENABLE_SPAMASSASSIN=1
ENABLE_CLAMAV=0
ENABLE_FAIL2BAN=0
ENABLE_POSTGREY=0
ENABLE_SASLAUTHD=0

# Security settings
SPOOF_PROTECTION=1
ENABLE_SRS=1

# Mailbox settings
ENABLE_QUOTAS=1
DEFAULT_RELAY_HOST=

# Postfix settings
POSTFIX_MAILBOX_SIZE_LIMIT=0
POSTFIX_MESSAGE_SIZE_LIMIT=104857600

# Dovecot settings
ENABLE_IMAP=1
ENABLE_POP3=0

# Logging
LOG_LEVEL=info

# Network settings
NETWORK_INTERFACE=eth0

# Additional security
ENABLE_AMAVIS=0
AMAVIS_LOGLEVEL=0

# DKIM Configuration
ENABLE_OPENDKIM=1
ENABLE_OPENDMARC=1

# SPF Configuration
ENABLE_POLICYD_SPF=1

# Additional authentication settings
SPOOF_PROTECTION=1
ENABLE_SRS=1

# Permit Docker network
PERMIT_DOCKER=network

# One directory for all users
ONE_DIR=1 